<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')  
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="errors">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
<%  }) %>
    </ul>
<% } %>

<div id="loginPage" class="formPage">
    <form id="loginForm"  class="myForm" action="/account/login" method="post">
        <label for="account_email">Email:</label>
        <input id="account_email" name="account_email" type="email" required value="<%= locals.account_email %>">
    
        <label for="account_password">Password:</label>
        <input id="account_password" name="account_password" type="password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <div>There must be at least 12 characters, one must be a number, one must be a lowercase letter, one must be a capital letter, and one must be a non-alphanumeric character.</div>
    
        <button type="submit">Login</button>
    </form>
    
    <p>No account? <a href="/account/register">Sign Up</a></p>
</div>